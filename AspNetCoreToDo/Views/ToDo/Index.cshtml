@model ToDoViewModel

@{
    ViewData["Title"] = "Manage your Todo list";
}

<div class = "panel panel-default todo-panel">
    <div class = "panel-heading">@ViewData["Title"]</div>
    <table class = "table table-hover">
        <thead>
            <tr>
                <td>&#2714</td>
                <td>Title</td>
                <td>Due At</td>
            </tr>
        </thead>

        @foreach (var item in Model.ToDoItems)
        {
            <tr>
                <td>
                    <input type = "checkbox">
                </td>
                <td>item.Title</td>
                <td>item.DueAt</td>
            </tr>
        }

    </table>
</div>